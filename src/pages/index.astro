---
import Layout from '../components/Layout.astro';
import Navbar from '../components/Nav.astro';
import Context from '../components/Context.astro'
---

<Layout class="background">
	<main>
		<div class="background"></div>
		<Navbar />
		<Context />
	</main>
</Layout>
<style is:global>
    body {
        padding-top: 70px;
        margin: 0;
        padding: 0;
		-webkit-print-color-adjust: exact !important;
		-webkit-print-color-adjust:exact !important;
		-moz-print-color-adjust:exact !important;
    }
    
    .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw; /* 100% del ancho de la ventana */
        height: 100vh; /* 100% de la altura de la ventana */
        z-index: -1;
        background: linear-gradient(to bottom right, #000000, #0c0f3f, #4a235a); /* Degradado de negro a azul oscuro a violeta oscuro */
    }

    main {
        padding-top: 70px;
        position: relative; /* Asegura que el contenido principal se coloque correctamente */
        z-index: 1; /* Coloca el contenido principal sobre el fondo */
        padding: 20px; /* Añade un espacio para que el contenido no esté pegado al borde */
    }
	@media print {
        html {
            background: black;
        }
		a {
			display: none;
		}
    }
</style>

